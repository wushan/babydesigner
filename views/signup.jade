extends ./layout
block hero
	h1 Sign Up
	small enter your E-mail, Username and set a password.
block body
	section.loggin-wrapper
		.loggin-inner.restrict-tiny
			form.signin-form(method="POST" action="/user")
				.controlgroup
					input(type="email" name="email", placeholder="E-mail")
				.controlgroup
					input(type="password" name="password", placeholder="Custom password")
				.call-action
					button.btn.full.confirmation(type="submit") Sign Up
					.form-tips
						|	Please read our 
						a(href='javascript:;') TOU ( Term of Use ) 
						|	before sign up.
			