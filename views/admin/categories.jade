block body
	.container.restrict
		h1 Category Settings
		section
			h3 Add New Category
			form(action='')
				.controlgroup
					label Name
					.controls
						input(type='text', placeholder='Category Name')
				.call-action
					button.btn.confirmation.full(type='submit') Add
		h1 Subcategory Settings
		section
			h3 Add New SubCategory
			form(action='')
				.controlgroup
					label Parent
					.controls
						.select-wrapper
							select
								option Advertisement
				.controlgroup
					label Name
					.controls
						input(type='text', placeholder='Subcategory slug. eg. Twitter Post')
				.controlgroup
					label Width
					.controls
						input(type='text', placeholder='width, eg. 320')
				.controlgroup
					label Height
					.controls
						input(type='text', placeholder='height, eg. 320')
				.call-action
					button.btn.confirmation.full(type='submit') Add
				