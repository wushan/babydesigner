extends ./layout
block hero
	h1 Showroom
block body
	//- p #{publicworks}
	section#works
		.restrict
			.work-list
				ul
					each work in publicworks
						li
							.thumbnail
								a(href='/editor/' + work.workid)
									img(src=work.thumbnail)
							.caption
								if work.subcategory
									p=work.subcategory.slug
									.author
										|	author / 
										a(href='/user/'+ work.author.username)=work.author.username