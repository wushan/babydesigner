#brand
	a(href='/')
		img(src='/images/components/draftty-logo.svg')
nav.main-navigation
	ul
		li
			a(href='/works/public') SHOWROOM
		li
			a(href='/editor') MAKE
		li
			a(href='javascript:;') RESOURCES

.navigation-buttons
	
	if authorized
		.user-dropdown
			a(href='javascript:;')
				if user.avatar
					.avatar
						img(src=user.avatar)
				else
					.avatar
						img(src='http://unsplash.it/40x40')
				if user
					.name #{user.username}
			ul
				li
					a(href='/user') Profile
				li
					a(href='/logout') Logout
		
	else
		a.btn.bordered.js-login(href='/login') Login
		a.btn.bordered(href='/signup') Signup